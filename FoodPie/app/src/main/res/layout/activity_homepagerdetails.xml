<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backTv"
            android:background="@mipmap/ic_back_dark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片详情"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/backTv"
            android:layout_toEndOf="@+id/backTv" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_back_dark"
            android:layout_alignParentRight="true"
            android:id="@+id/shareTv"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon"
            android:id="@+id/iconIv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aa"
            android:id="@+id/nameTv"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iconIv"
            android:layout_toEndOf="@+id/iconIv" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bb"
            android:id="@+id/timeTv"
            android:layout_alignBottom="@+id/iconIv"
            android:layout_toRightOf="@+id/iconIv"
            android:layout_toEndOf="@+id/iconIv" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon"
        android:id="@+id/imagesIv"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_back_dark"
            android:id="@+id/likesIv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likesTv"
            android:text="aa"/>
    </LinearLayout>




</LinearLayout>